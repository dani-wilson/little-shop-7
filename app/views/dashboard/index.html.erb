<div class="page-title">Merchant Dashboard</div>

<div class="merchant_title">
  <%= @merchant.name %>
  <nav class="main-menu a:hover">
    <%= link_to "My Items", merchant_items_path %>
    <%= link_to "My Invoices", merchant_invoices_path %>
  </nav>
</div>

<div class="seperator"></div>
<div class="container"></div>

<div class="item-sections-container">
  <div class="ready-items">
    <h2>Items Ready to Ship</h2>
  </div>
  <div class="favorite-items">
    <h2>Favorite Items</h2>
    <div>
    <ol start="1"><% @merchant.favorite_customers.each do |customer| %>
      <li><%= customer.first_name %>&nbsp;<%= customer.last_name %> &nbsp; <%=customer.count%></li>
    <%end%>
    </ol>
    </div>
  </div>
</div>