<%= render partial: "shared/visitor_topper", locals: { items: true  } %>
<div class="page-title"><%= @item.name %></div>
<p>Description: <%= @item.description %></p>
<p>Unit Price: <%= number_to_currency((@item.unit_price / 100.0)) %></p>
<%= link_to "Edit #{@item.name}", edit_merchant_item_path(@merchant, @item) %>
<div class="flash-message">
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
</div>
<% if @item_photos.present? && @item_photos.first.present? %>
  <%= image_tag @item_photos.first['urls']['small'] %>
<% else %>
  <p>No related images found.</p>
<% end %>
